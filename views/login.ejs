<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>NexusPlus - Classified Ads and Listing Template</title>
    <% include ./partial/headerlink %>
  </head>
  <body>
    <% include ./partial/login-header %>
    <!--====================================================================Container Section==========================================================================-->
    <div class="page-header" style="background: url(assets/img/banner1.jpg);">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="breadcrumb-wrapper">
              <h2 class="product-title">Login</h2>
              <ol class="breadcrumb">
                <li><a href="">Home /</a></li>
                <li class="current">Login</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </div>
    <section class="login section-padding">
      <div class="container">
       <center>
          <% if(err){ %><p style="color:red"><%=err.errors; %></p><% } %>
          
          <% if(msg){ %>        
                   
            <p style="color:red"><%=msg;%></p>         
               
          <% } %>
        </center>
        <div class="row justify-content-center">
          <div class="col-lg-5 col-md-12 col-xs-12">
            <div class="login-form login-area">
              <h3>Login Now</h3>
              <form class="login-form" action="/login" method="POST">
                <div class="form-group">
                  <div class="input-icon">
                    <i class="lni-user"></i>
                    <input type="text" id="sender-email" class="form-control" name="email" placeholder="Email" />
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-icon">
                    <i class="lni-lock"></i>
                    <input type="password" name="password" class="form-control" placeholder="Password" />
                  </div>
                </div>
                <div class="form-group mb-3">
                  <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="checkedall"/>
                    <label class="custom-control-label" for="checkedall">Keep me logged in</label>
                  </div>
                  <a class="forgetpassword" href="javascript:void(0)" >Forgot Password?</a
                  >
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-common log-btn">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--====================================================================End Container Section==========================================================================-->

    <% include ./partial/footer %>
  </body>
</html>
